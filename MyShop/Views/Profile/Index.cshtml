@model Profile

@{
    ViewBag.Title = "Профиль";
}

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4"> 
        <div class="image d-flex flex-column justify-content-center align-items-center"> 
            <div>
                <img class="img-thumbnail" src="~/img/@Model?.ImagePath" style="height:200px;width:auto" />
            </div> 
            <span class="mt-3" style="font-weight:700; font-size:larger">@Model?.UserName</span> 
            <span>@Model?.Email</span> 
            <div class="d-flex flex-row justify-content-center align-items-center gap-2"> 
                <span>Год рождения: @Model?.BirthDate.ToShortDateString()</span> 
                <span><i class="fa fa-copy"></i></span> 
            </div> 
            <div class="d-flex flex-row justify-content-center align-items-center gap-2"> 
                <span>Пол: @Model?.Sex</span> 
                <span><i class="fa fa-copy"></i></span> 
            </div> 
            <div class="d-flex flex-row justify-content-center align-items-center mt-3"> 
                <span class="number">0 <span class="follow">автомобилей куплено</span></span> 
            </div> 
            <div class="d-flex mt-2" >
                <form class="d-flex" asp-area="" method="get" >
                    <input asp-controller="Profile" asp-action="Edit" class="btn btn-warning" type="submit" value="Изменить профиль" />
                </form>
            </div> 
        </div> 
    </div>
</div>
