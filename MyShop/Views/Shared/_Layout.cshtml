<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand">Магазин машин</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Главная</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        @if (User.IsInRole("admin"))
                        {
                            <button class="btn btn-outline-success me-2" type="submit" asp-area="Admin" asp-controller="Home" asp-action="Index">Панель администратора</button>
                            <button class="btn btn-outline-success" type="submit" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</button>
                        }
                        else if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-outline-success me-2" type="submit" asp-area="" asp-controller="Cart" asp-action="Index">Корзина</button>
                            <button class="btn btn-outline-success me-2" type="submit" asp-area="" asp-controller="Profile" asp-action="Index">Профиль</button>
                            <button class="btn btn-outline-success" type="submit" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</button>
                        }
                        else{
                        <button class="btn btn-outline-success me-2" type="submit" asp-area="" asp-controller="Account" asp-action="Login">Войти</button>
                        <button class="btn btn-outline-success" type="submit" asp-area="" asp-controller="Account" asp-action="Signup">Зарегистрироваться</button>
                        }
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        @RenderBody()
    </div>
    @*<footer class="container fixed-bottom" style="position:static">
        <p class="float-end"><a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Back to top</a></p>
        <p>&copy; 2021–2023 Company, Inc. &middot; </p>
    </footer>*@
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
